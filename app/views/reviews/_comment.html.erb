<div class="comment-review comment-review-<%= comment.id %>">
  <div class="comment-edit-delete">
    <% if current_user?(comment.user) %>   
      <span class="showUpdateCommentForm-<%= comment.id %>">
        Edit
      </span>
      <span>
        <%= link_to "Delete", comment_path(comment), method: :delete, data: {confirm: "Are you sure?"}, remote: true %>
      </span>
    <% end %> 
  </div> 
  <%= gravatar_for(comment.user, size: 50) %>
  <span id="comment-<%= comment.id %>">
    <%= comment.content %>
  </span>
</div>