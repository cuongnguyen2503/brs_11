<%= form_for(review, method: :put, remote: true) do |f| %>
  <%= f.label :rating_point, class: "rating-label" %>
  <%= f.select :rating_point, (1..10).to_a, {selected: review.rating_point.to_i},
               class: "rating-selector" %>
  <%= f.text_area :content, value: review.content, class: "form-control" %>
  <%= f.submit "Update", class: "review-update-button btn-primary" %>
  <%= link_to "Cancel", '#', id: "review-cancel-button" %>
<% end %>